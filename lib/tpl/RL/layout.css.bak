/**
 * Tableless Layout for default template
 *
 * @author Andreas Gohr <andi@splitbrain.org>
 * @author moraes <moraes@tipos.com.br>
 */
 
#bandeau {
	border-left: 1px solid #0066b9;
	border-right: 1px solid #0066b9;
	background: url(/wiki/lib/tpl/RL/images/bandeau3.jpg) repeat-x;
    height: 60px;
	margin-left: 152px;
}

#searche {
    text-align: center;
    float:right;
	margin-top:36px;
	height: 22px;
	width: 330px;
	border:0;
	padding:2px 0 0 0;
	background: url(/wiki/lib/tpl/RL/images/fondrech.png);
}

div.stylefoot {
  margin-left: 148px;
}
  
/* -------------- top row --------------- */
div.dokuwiki .header {
  display: none;
  padding: 3px 0 0 2px;
}

#bar__top {
  display: none;
}

div.dokuwiki .pagename {
  float: left;
  font-size: 200%;
  font-weight: bolder;
  color: __background_alt__;
  text-align: left;
  vertical-align: middle;
}

div.dokuwiki .pagename a {
  color: __extern__ !important;
  text-decoration: none !important;
}

div.dokuwiki .logo {
  float: right;
  font-size: 220%;
  font-weight: bolder;
  text-align: right;
  vertical-align: middle;
}

div.dokuwiki .logo a {
  color: __background_alt__ !important;
  text-decoration: none !important;
  font-variant: small-caps;
  letter-spacing: 2pt;
}

/* ---------------  top and bottom bar ---------------- */
div.dokuwiki .bar {
  border-top: 1px solid __border__;
  border-bottom: 1px solid __border__;
  background: __background_alt__;
  padding: 0.1em 0.15em;
  clear: both;
}

div.dokuwiki .bar-left {
  float: left;
}

div.dokuwiki .bar-right {
  float: right;
  text-align: right;
}

div.dokuwiki #bar__bottom {
  margin-bottom: 3px;
}

/* ------------- File Metadata ----------------------- */

div.dokuwiki div.meta {
  clear: both;
  margin-top: 1em;
  color: __text_alt__;
  font-size: 70%;
}

div.dokuwiki div.meta div.user {
  float: left;
}

div.dokuwiki div.meta div.doc {
  text-align: right;
}
